{
  "hero": {
    "title": "Contact Us",
    "subtitle": "Get in touch with our team. We'd love to hear from you."
  },
  "form": {
    "fields": {
      "fullName": {
        "label": "Full Name",
        "required": true,
        "type": "text",
        "placeholder": "Enter your full name"
      },
      "emailAddress": {
        "label": "Email Address", 
        "required": true,
        "type": "email",
        "placeholder": "Enter your email address"
      },
      "phoneNumber": {
        "label": "Phone Number",
        "required": true, 
        "type": "tel",
        "placeholder": "Enter your phone number"
      },
      "message": {
        "label": "Message",
        "required": true,
        "type": "textarea",
        "placeholder": "Enter your message",
        "rows": 5
      }
    },
    "addressSection": {
      "title": "Address Details",
      "checkboxLabel": "Include address details",
      "fields": {
        "addressLine1": {
          "label": "Address Line 1",
          "required": true,
          "type": "text"
        },
        "addressLine2": {
          "label": "Address Line 2",
          "required": false,
          "type": "text"
        },
        "cityTown": {
          "label": "City/Town",
          "required": true,
          "type": "text"
        },
        "stateCounty": {
          "label": "State/County", 
          "required": false,
          "type": "text"
        },
        "postcode": {
          "label": "Postcode",
          "required": true,
          "type": "text"
        },
        "country": {
          "label": "Country",
          "required": true,
          "type": "text"
        }
      }
    },
    "submitButton": {
      "text": "Submit",
      "loadingText": "Submitting..."
    },
    "messages": {
      "success": "Thank you for your message! We will get back to you soon.",
      "error": "An error occurred while submitting the form. Please try again."
    }
  }
}
